<div class="text-center">
  <h1>領収書情報の登録</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@receipt) do |f| %>

      <div class="form-group">
        <%= f.label :name, '宛名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :date, '日付' %>
        <%= f.text_field :date, class: 'form-control', :placeholder => '例：2019年6月15日' %>
      </div>

      <div class="form-group">
        <%= f.label :price, '金額' %>
        <%= f.text_field :price, class: 'form-control', :placeholder => '例：10,000' %>
      </div>

      <div class="form-group">
        <%= f.label :publisher, '発行者（会社名）' %>
        <%= f.text_field :publisher, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :representative, '発行者（代表者名）' %>
        <%= f.text_field :representative, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :provision, '但し書き' %>
        <%= f.text_field :provision, class: 'form-control' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to '一覧に戻る', receipts_path %>
  </div>
</div>
