<% if @receipts.any? %>
  <ul class="media-list">
    <% @receipts.each do |receipt| %>
      <li class="media">
        <div class="media-body">
          <div>
            <%= receipt.name %>
          </div>
          <div>
            <p><%= link_to '詳細', receipt_path(receipt) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to '新規作成', new_receipt_path %>
